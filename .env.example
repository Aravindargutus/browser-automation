# ========================================
# BACKEND CONFIGURATION (.env in root)
# ========================================

# Server Configuration
PORT=3001
NODE_ENV=development

# API Security
# Generate a secure API key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Leave blank to disable authentication (development only)
API_KEY=your-secure-api-key-here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2-vision
OLLAMA_TIMEOUT=60000

# Browser Configuration
BROWSER_HEADLESS=false
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=100
CLEANUP_INTERVAL_HOURS=24

# ========================================
# FRONTEND CONFIGURATION (.env in root)
# ========================================
# Note: Frontend env vars must start with REACT_APP_
# Restart the dev server after changing these values

# Backend API URL
REACT_APP_API_URL=http://localhost:3001

# API Key (must match backend API_KEY)
# Leave blank if authentication is disabled on backend
REACT_APP_API_KEY=your-secure-api-key-here
